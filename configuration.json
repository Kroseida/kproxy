{
  "server": {
    "bindHost": ":80",
    "tls": {
      "active": true,
      "bindHost": ":443",
      "certificates": {
        "grafana.kroseida.org": {
          "cert": "cert.pem",
          "key": "privkey.pem"
        }
      }
    }
  },
  "hostResolver": {
    "source": "kubernetes/calico",
    "configuration": {
      "kubeconfig": "config",
      "namespace": "kroseida"
    }
  }
}